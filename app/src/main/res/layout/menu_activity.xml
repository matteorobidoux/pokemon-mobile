<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/main_menu_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/main_menu"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:id="@+id/menu_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_text">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wild_poke_battle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:padding="20dp"
            android:text="@string/wild_battle"
            android:textColor="@color/black"
            app:icon="@drawable/wild_poke_battle"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/trainer_battle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="50dp"
            android:paddingBottom="20dp"
            android:text="@string/trainer_battle"
            android:textColor="@color/black"
            app:icon="@drawable/trainer_battle"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pokecenter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="100dp"
            android:paddingBottom="20dp"
            android:text="@string/pokecenter"
            android:textColor="@color/black"
            app:icon="@drawable/pokecenter"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pokemart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="130dp"
            android:paddingBottom="20dp"
            android:text="@string/pokemart"
            android:textColor="@color/black"
            app:icon="@drawable/pokemart"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_team_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="90dp"
            android:paddingBottom="20dp"
            android:text="@string/change_team"
            android:textColor="@color/black"
            app:icon="@drawable/change_teams"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/shade_white"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="190dp"
            android:paddingBottom="20dp"
            android:text="@string/save_game"
            android:textColor="@color/black"
            app:icon="@drawable/save"
            app:iconSize="35dp"
            app:iconTint="@null"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
