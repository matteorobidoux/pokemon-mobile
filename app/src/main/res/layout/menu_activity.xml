<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/main_menu_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_menu"
        app:layout_constraintTop_toBottomOf="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:layout_margin="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/menu_buttons"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_text"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/wild_poke_battle_btn"
            android:layout_width="wrap_content"
            android:padding="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:layout_height="wrap_content"
            android:text="@string/wild_battle"
            android:layout_margin="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/trainer_battle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:text="@string/trainer_battle"
            android:layout_margin="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pokecenter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:text="@string/pokecenter"
            android:layout_margin="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pokemart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="95dp"
            android:paddingRight="95dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:text="@string/pokemart"
            android:layout_margin="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_team_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:text="@string/change_team"
            android:layout_margin="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="125dp"
            android:paddingRight="125dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            app:strokeColor="@color/black"
            app:strokeWidth="4dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/shade_white"
            android:text="@string/save_game"
            android:gravity="center"
            android:layout_margin="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>